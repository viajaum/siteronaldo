---
// Este é o layout que será reutilizado em todas as páginas
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title || "Meu Site"}</title>
    <link rel="stylesheet" href="/styles/global.css" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
  </head>
  <body>
    <header>
				<div class="container">
      <nav class="navbar">
        <a href="/">
          <img src="/images/estrela.jpg" alt="Logo do Site" class="logo" />
        </a>        <button class="hamburger" aria-label="Abrir menu">
          ☰
        </button>
        <ul class="nav-links">
          <li><a href="/">Início</a></li>
          <li><a href="/noticias">Notícias</a></li>
          <li><a href="/fotos">Fotos</a></li>
          <li><a href="/contato">Contato</a></li>
        </ul>
      </nav>
				</div>
    </header>
    <main class="container">
		<slot />
    </main>
    <footer>
		<div class="container">
		  <div class="social-links">
			<a href="https://web.facebook.com/ronaldo.quadrado" target="_blank" aria-label="Facebook">
			  <i class="fab fa-facebook-f"></i>
			</a>
			<a href="https://x.com/ronaldoquadrado" target="_blank" aria-label="Twitter">
			  <i class="fab fa-twitter"></i>
			</a>
			<a href="https://www.instagram.com/ronaldoquadrado/" target="_blank" aria-label="Instagram">
			  <i class="fab fa-instagram"></i>
			</a>
			<a href="https://wa.me/123456789" target="_blank" aria-label="WhatsApp">
				<i class="fab fa-whatsapp"></i>
			</a>
		  </div>
		</div>
	  </footer>
    <script>
      // Script para alternar o menu hambúrguer
      document.addEventListener('DOMContentLoaded', () => {
        const hamburger = document.querySelector('.hamburger');
        const navLinks = document.querySelector('.nav-links');

        hamburger.addEventListener('click', () => {
          navLinks.classList.toggle('active');
        });
      });
    </script>
  </body>
</html>
