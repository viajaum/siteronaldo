---
import Banner from '@components/Banner.astro';
import Menu from '@components/Menu.astro';
import { noticias } from '@data/noticias';

const formatarData = (data) => {
  return new Date(data).toLocaleDateString('pt-BR');
}

// Filtrar apenas itens da categoria "Agendas"
const agendas = noticias.filter(item => item.categoria === "Artigos");
---

<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Artigos - Ronaldo Quadrado</title>
  <meta name="description" content="Confira os artigos do vereador Ronaldo Quadrado. Fique por dentro das análises e opiniões sobre temas relevantes." />

  <!-- CANONICAL -->
  <link rel="canonical" href="https://ronaldoquadrado.com/artigos" />

  <!-- FAVICON E MANIFEST -->
  <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="shortcut icon" href="/favicon.ico" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <meta name="apple-mobile-web-app-title" content="Ronaldo Quadrado" />
  <link rel="manifest" href="/site.webmanifest" />

  <!-- OPEN GRAPH -->
  <meta property="og:title" content="Artigos - Ronaldo Quadrado" />
  <meta property="og:description" content="Confira os artigos do vereador Ronaldo Quadrado. Fique por dentro das análises e opiniões sobre temas relevantes." />
  <meta property="og:image" content="https://ronaldoquadrado.com/favicon-96x96.png" />
  <meta property="og:url" content="https://ronaldoquadrado.com/artigos" />
  <meta property="og:type" content="website" />

  <!-- TWITTER -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="Artigos - Ronaldo Quadrado" />
  <meta name="twitter:description" content="Confira os artigos do vereador Ronaldo Quadrado. Fique por dentro das análises e opiniões sobre temas relevantes." />
  <meta name="twitter:image" content="https://ronaldoquadrado.com/favicon-96x96.png" />

  <!-- JSON-LD -->
  <script type="application/ld+json">
  {{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": "Artigos - Ronaldo Quadrado",
    "url": "https://ronaldoquadrado.com/artigos",
    "description": "Confira os artigos do vereador Ronaldo Quadrado. Fique por dentro das análises e opiniões sobre temas relevantes."
  }}
  </script>

  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      color: #444040;
    }

    .main-container {
      max-width: 830px;
      margin: 0 auto;
      padding: 20px;
    }

    .agendas-container {
      margin-top: 20px;
    }

    article {
      margin-bottom: 30px;
      padding-bottom: 20px;
      border-bottom: 1px solid #eee;
    }

    .agenda-link {
      text-decoration: none;
      color: inherit;
      display: flex;
      flex-direction: row;
      gap: 20px;
    }

    .imagem-container {
      flex: 0 0 300px;
    }

    .imagemagenda {
      width: 100%;
      height: auto;
      border-radius: 4px;
    }

    .info-container {
      flex: 1;
    }

    h2 {
      margin-top: 0;
      color: #333;
    }

    .leiamais {
      display: inline-block;
      margin-top: 10px;
      color: #fc7804;
      text-decoration: none;
      font-weight: bold;
    }

    .leiamais:hover {
      color: #d42f2e;
    }

    @media screen and (max-width: 768px) {
      .agenda-link {
        flex-direction: column;
      }

      .imagem-container {
        flex: 1;
        width: 100%;
        max-width: 100%;
        margin-bottom: 15px;
      }
    }

    @media screen and (max-width: 480px) {
      .main-container {
        padding: 15px;
      }

      h1 {
        font-size: 1.8rem;
      }

      h2 {
        font-size: 1.3rem;
      }
    }
  </style>
</head>
<body>
  <Banner />
  <Menu />

  <div class="main-container">
    <h1>Artigos</h1>

    <div class="agendas-container">
      {agendas.sort((a, b) => new Date(b.data) - new Date(a.data)).map((agenda) => (
        <article key={agenda.id}>
          <a href={`/noticias/${agenda.id}`} class="agenda-link">
            <div class="imagem-container">
              <img src={agenda.imagem} alt={`Imagem da agenda ${agenda.titulo}`} class="imagemagenda" />
            </div>
            <div class="info-container">
              <h2>{agenda.titulo}</h2>
              <p>{formatarData(agenda.data)}</p>
              <p>{agenda.resumo}</p>
            </div>
          </a>
          <a class="leiamais" href={`/noticias/${agenda.id}`}>Saiba mais</a>
        </article>
      ))}
    </div>
  </div>
</body>
</html>
