---
// src/pages/agendas/index.astro
import Banner from '@components/Banner.astro';
import Menu from '@components/Menu.astro';
import { noticias } from '@data/noticias';

const formatarData = (data) => {
  return new Date(data).toLocaleDateString('pt-BR');
}

// Filtrar apenas itens da categoria "Agendas"
const agendas = noticias.filter(noticias => noticias.categoria === "Agendas");
---

<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Agendas</title>
  <style>
    /* Estilos mantidos iguais */
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      color: #444040;
    }

    .main-container {
      max-width: 830px;
      margin: 0 auto;
      padding: 20px;
    }

    .agendas-container {
      margin-top: 20px;
    }

    article {
      margin-bottom: 30px;
      padding-bottom: 20px;
      border-bottom: 1px solid #eee;
    }

    .agenda-link {
      text-decoration: none;
      color: inherit;
      display: flex;
      gap: 20px;
    }

    .imagem-container {
      flex: 0 0 300px;
    }

    .imagemagenda {
      width: 100%;
      height: auto;
      border-radius: 4px;
    }

    .info-container {
      flex: 1;
    }

    h2 {
      margin-top: 0;
      color: #333;
    }

    .leiamais {
      display: inline-block;
      margin-top: 10px;
      color: #0066cc;
      text-decoration: none;
      font-weight: bold;
    }

    .leiamais:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <Banner />
  <Menu />

  <div class="main-container">
    <h1>Agendas</h1>

    <div class="agendas-container">
      {agendas.sort((a, b) => new Date(b.data) - new Date(a.data)).map((agenda) => (
        <article key={agenda.id}>
          <a href={`/noticias/${agenda.id}`} class="agenda-link">  <!-- Alterado para /noticias/ -->
            <div class="imagem-container">
              <img src={agenda.imagem} alt={`Imagem da agenda ${agenda.titulo}`} class="imagemagenda" />
            </div>
            <div class="info-container">
              <h2>{agenda.titulo}</h2>
              <p>{formatarData(agenda.data)}</p>
              <p>{agenda.resumo}</p>
            </div>
          </a>
          <a class="leiamais" href={`/noticias/${agenda.id}`}>Saiba mais</a>  <!-- Alterado para /noticias/ -->
        </article>
      ))}
    </div>
  </div>
</body>
</html>