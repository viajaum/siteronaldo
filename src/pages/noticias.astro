---
// src/pages/noticias/index.astro
import Banner from '@components/Banner.astro';
import Menu from '@components/Menu.astro';
import { noticias } from '@data/noticias';

const formatarData = (data) => {
  return new Date(data).toLocaleDateString('pt-BR');
}

// Filtrar apenas notícias da categoria "Notícias"
const noticiasFiltradas = noticias.filter(noticia => noticia.categoria === "Notícias");
---

<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Notícias</title>
  <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="shortcut icon" href="/favicon.ico" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <meta name="apple-mobile-web-app-title" content="Ronaldo Quadrado" />
  <link rel="manifest" href="/site.webmanifest" />
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      color: #444040;
    }

    .main-container {
      max-width: 830px;
      margin: 0 auto;
      padding: 20px;
    }

    .noticias-container {
      margin-top: 20px;
    }

    article {
      margin-bottom: 30px;
      padding-bottom: 20px;
      border-bottom: 1px solid #eee;
    }

    .noticia-link {
      text-decoration: none;
      color: inherit;
      display: flex;
      flex-direction: row;
      gap: 20px;
    }

    .imagem-container {
      flex: 0 0 300px;
    }

    .imagemnews {
      width: 100%;
      height: auto;
      border-radius: 4px;
    }

    .info-container {
      flex: 1;
    }

    h2 {
      margin-top: 0;
      color: #333;
    }

    .leiamais {
      display: inline-block;
      margin-top: 10px;
      color: #fc7804;
      text-decoration: none;
      font-weight: bold;
    }

    .leiamais:hover {
      color: #d42f2e;
    }

    /* Media queries para responsividade */
    @media screen and (max-width: 768px) {
      .noticia-link {
        flex-direction: column;
      }

      .imagem-container {
        flex: 1;
        width: 100%;
        max-width: 100%;
        margin-bottom: 15px;
      }
    }

    @media screen and (max-width: 480px) {
      .main-container {
        padding: 15px;
      }

      h1 {
        font-size: 1.8rem;
      }

      h2 {
        font-size: 1.3rem;
      }
    }
  </style>
</head>
<body>
  <Banner />
  <Menu />

  <div class="main-container">
    <h1>Notícias</h1>

    <div class="noticias-container">
      {noticiasFiltradas.sort((a, b) => new Date(b.data) - new Date(a.data)).map((noticia) => (
        <article key={noticia.id}>
          <a href={`/noticias/${noticia.id}`} class="noticia-link">
            <div class="imagem-container">
              <img src={noticia.imagem} alt={`Imagem da notícia ${noticia.titulo}`} class="imagemnews" />
            </div>
            <div class="info-container">
              <h2>{noticia.titulo}</h2>
              <p>{formatarData(noticia.data)}</p>
              <p>{noticia.resumo}</p>
            </div>
          </a>
          <a class="leiamais" href={`/noticias/${noticia.id}`}>Leia mais</a>
        </article>
      ))}
    </div>
  </div>
</body>
</html>