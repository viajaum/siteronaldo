---
// src/components/Banner.astro
---

<div class="banner-container">
  <div class="conteudo-banner">
    <!-- Imagem de fundo -->
    
<picture>
  <source srcset="/images/fundo.webp" type="image/webp">
  <img src="/images/fundo.png" 
      alt="Fundo do banner" 
      class="imagem-fundo" 
    />
</picture>
    
    <!-- Logo -->
    
<picture>
  <source srcset="/images/logo.webp" type="image/webp">
  <img src="/images/logo.png" 
      alt="Logo Ronaldo Quadrado" 
      class="logo-sobreposto" 
    />
</picture>
    
    <!-- Foto -->
    
<picture>
  <source srcset="/images/fotobanner.webp" type="image/webp">
  <img src="/images/fotobanner.png" 
      alt="Foto Ronaldo Quadrado" 
      class="foto-sobreposta" 
    />
</picture>
  </div>
</div>

<style>
  /* =========== ESTILOS BASE =========== */
  .banner-container {
    width: 100%;
    position: relative;
    overflow: hidden;
    max-height: 300px;
    height: 300px;
  }

  .conteudo-banner {
    position: relative;
    width: 100%;
    height: 100%;
  }

  /* Imagem de fundo ajustada */
  .imagem-fundo {
    width: auto;
    height: 100%;
    min-width: 100%;
    position: absolute;
    right: 0;
    object-fit: cover;
    object-position: right center;
  }

  /* Logo */
  .logo-sobreposto {
    position: absolute;
    left: 25%;
    bottom: 20px; /* Alterado de 0 para 20px - ajuste este valor conforme necessário */
    width: 40%;
    max-height: 200px;
    height: auto;
    z-index: 2;
    filter: drop-shadow(0 2px 4px rgba(0,0,0,0.3));
    object-fit: contain;
  }

  /* Foto */
  .foto-sobreposta {
    position: absolute;
    right: 10%;
    bottom: 0;
    width: 45%;
    max-height: 280px;
    height: auto;
    z-index: 2;
    object-fit: contain;
  }

  /* =========== RESPONSIVIDADE =========== */
 /* Telas médias - reduz altura para mostrar mais largura */
 @media (max-width: 1024px) {
    .banner-container {
      height: 250px;
    }
    
    .logo-sobreposto {
      left: 10%;
      bottom: 20px;
      width: 45%;
      max-height: 160px;
    }
    
    .foto-sobreposta {
      right: 2%;
      bottom: 0;
      width: 50%;
      max-height: 220px;
    }
  }

  /* Tablets - altura ainda menor */
  @media (max-width: 768px) {
    .banner-container {
      height: 200px;
    }
    
    .logo-sobreposto {
      left: 15%;
      bottom: 15px;
      width: 50%;
      max-height: 140px;
    }
    
    .foto-sobreposta {
      right: 5%;
      bottom: 0;
      width: 55%;
      max-height: 180px;
    }
  }

  /* Celulares - máxima prioridade para largura */
  @media (max-width: 480px) {
    .banner-container {
      height: 150px;
    }
    
    .logo-sobreposto {
      left: 5%;
      bottom: 10px;
      width: 55%;
      max-height: 100px;
    }
    
    .foto-sobreposta {
      right: 2%;
      bottom: 0;
      width: 50%;
      max-height: 140px;
    }
    
    .imagem-fundo {
      object-position: center right; /* Prioriza mostrar o lado direito */
    }
  }
  </style>