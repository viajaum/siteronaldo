<style>
#redes-sociais {
    background-color: #ffe300;
    padding: 80px 0;
    text-align: center;
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
}

.redes-container {
    display: flex;
    justify-content: center;
    gap: 40px;
    flex-wrap: wrap;
    margin: 50px auto 0;
    max-width: 800px;
}

.rede-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 120px;
    margin-bottom: 20px;
}

.circle {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 15px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.circle svg {
    width: 36px;
    height: 36px;
}

.rede-item:hover .circle {
    transform: translateY(-5px) scale(1.05);
    box-shadow: 0 6px 12px rgba(0,0,0,0.15);
}

.rede-nome {
    font-size: 1rem;
    font-weight: 600;
    color: #333;
    margin-top: 8px;
}

/* Cores espec√≠ficas para cada rede */
.whatsapp { background-color: #25D366; }
.instagram { background-color: #E4405F; }
.facebook { background-color: #1877F2; }
.twitter { background-color: #1DA1F2; }
.youtube { background-color: #FF0000; }

/* Responsividade */
@media (max-width: 768px) {
    #redes-sociais {
        padding: 60px 0;
    }
    
    .redes-container {
        gap: 30px;
        margin-top: 30px;
    }
    
    .rede-item {
        width: 100px;
    }
    
    .circle {
        width: 70px;
        height: 70px;
    }
    
    .circle svg {
        width: 30px;
        height: 30px;
    }
}

@media (max-width: 480px) {
    .redes-container {
        gap: 20px;
    }
    
    .rede-item {
        width: 80px;
    }
    
    .circle {
        width: 60px;
        height: 60px;
    }
    
    .rede-nome {
        font-size: 0.9rem;
    }
}
</style>