---
// src/components/sections/Galeria.astro
---

<section id="galeria">
  <div class="conteudo-centralizado">
    <div class="galeria-inner">
      <h2 class="galeria-titulo">Fotos</h2>
      <div class="carrossel-container">
        <div class="carrossel">
          <div class="slide ativo">
            <img src="/images/fotos/foto-1.jpg" alt="Lançamento da candidatura à presidencia do PT Pelotas" class="imagem-carrossel">
          </div>
          <div class="slide">
            <img src="/images/fotos/foto-2.jpg" alt="Ronaldo conversando com adolescentes" class="imagem-carrossel">
          </div>
          <div class="slide">
            <img src="/images/fotos/foto-3.jpg" alt="Ronaldo com o prefeito Marroni e o deputado Zé Nunes" class="imagem-carrossel">
          </div>
        </div>
        <button class="carrossel-btn anterior" aria-label="Foto anterior">❮</button>
        <button class="carrossel-btn proximo" aria-label="Próxima foto">❯</button>
      </div>
      <div class="btn-container">
        <a href="/fotos/" class="btn-galeria">Ver mais fotos</a>
      </div>
    </div>
  </div>
</section>

<style>
#galeria {
  background-color: #d42f2e;
  color: white;
  padding: 60px 0;
  width: 100vw;
  position: relative;
  left: 50%;
  right: 50%;
  margin-left: -50vw;
  margin-right: -50vw;
}

.conteudo-centralizado {
  max-width: 830px;
  margin: 0 auto;
  padding: 0 20px;
}

.galeria-inner {
  width: 100%;
  max-width: 830px;
  margin: 0 auto;
}

.galeria-titulo {
  text-align: left;
  padding-left: 20px;
  margin-bottom: 20px;
  font-size: 2rem;
}

.carrossel-container {
  position: relative;
  width: 100%;
  height: 400px;
  overflow: hidden;
  border-radius: 8px;
  box-shadow: 0 4px 20px rgba(0,0,0,0.2);
}

.carrossel {
  display: flex;
  height: 100%;
  transition: transform 0.5s ease;
}

.slide {
  min-width: 100%;
  position: relative;
  display: none;
}

.slide.ativo {
  display: block;
  animation: fade 0.5s;
}

.imagem-carrossel {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

@keyframes fade {
  from { opacity: 0.6 }
  to { opacity: 1 }
}

.carrossel-btn {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  border: none;
  padding: 12px 16px;
  cursor: pointer;
  border-radius: 50%;
  font-size: 18px;
  z-index: 10;
  transition: all 0.3s;
}

.carrossel-btn:hover {
  background-color: rgba(0, 0, 0, 0.8);
  transform: translateY(-50%) scale(1.1);
}

.anterior { left: 20px; }
.proximo { right: 20px; }

.btn-container {
  text-align: center;
  margin-top: 30px;
}

.btn-galeria {
  display: inline-block;
  padding: 12px 30px;
  background-color: white;
  color: #d42f2e;
  text-decoration: none;
  border-radius: 50px;
  font-weight: bold;
  font-size: 1.1rem;
  transition: all 0.3s;
  border: 2px solid white;
  box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.btn-galeria:hover {
  background-color: transparent;
  color: white;
  transform: translateY(-2px);
  box-shadow: 0 6px 12px rgba(0,0,0,0.15);
}

@media (max-width: 768px) {
  .carrossel-container { height: 300px; }
  .btn-galeria { padding: 10px 25px; font-size: 1rem; }
  .galeria-titulo { padding-left: 0; text-align: center; }
}

@media (max-width: 480px) {
  .carrossel-container { height: 250px; }
  .carrossel-btn { padding: 10px 14px; font-size: 16px; }
}
</style>

<script is:inline>
document.addEventListener('DOMContentLoaded', () => {
  const container = document.querySelector('#galeria .carrossel-container');
  const slides = container.querySelectorAll('.slide');
  const btnAnterior = container.querySelector('.anterior');
  const btnProximo = container.querySelector('.proximo');
  let current = 0;

  function showSlide(index) {
    slides.forEach((s, i) => s.classList.toggle('ativo', i === index));
  }

  btnProximo.addEventListener('click', () => {
    current = (current + 1) % slides.length;
    showSlide(current);
  });

  btnAnterior.addEventListener('click', () => {
    current = (current - 1 + slides.length) % slides.length;
    showSlide(current);
  });

  let interval = setInterval(() => {
    current = (current + 1) % slides.length;
    showSlide(current);
  }, 5000);

  container.addEventListener('mouseenter', () => clearInterval(interval));
  container.addEventListener('mouseleave', () => {
    interval = setInterval(() => {
      current = (current + 1) % slides.length;
      showSlide(current);
    }, 5000);
  });
});
</script>
