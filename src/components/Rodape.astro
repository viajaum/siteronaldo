<style>
  .rodape {
    background-color: #444040;
    color: white;
    padding: 2rem 1rem;
    font-family: sans-serif;
  }

  .rodape-conteudo {
    max-width: 830px;
    margin: 0 auto;
  }

  .rodape-titulo {
    color: #fff;
    font-size: 1.3rem;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  /* Container das imagens */
  .rodape-container ul {
    list-style: none;
    display: flex;
    flex-wrap: wrap;           /* permite quebra de linha */
    justify-content: center;   /* centraliza horizontalmente */
    align-items: center;       /* centraliza verticalmente */
    gap: 1.5rem;               /* espaço entre imagens */
    padding: 0;
    margin: 0 auto;
  }

  .rodape-container ul li {
    display: flex;             /* garante alinhamento das imagens dentro do li */
    justify-content: center;
    align-items: center;
  }

  /* --- Estilo das imagens --- */
  .rodape img {
    max-width: 100px; /* limite padrão */
    height: auto;
    display: block;
  }

  .ze, .alexandre, .lula {
    max-width: 120px; /* algumas podem ser maiores */
  }

  /* --- Regras para links --- */
  .rodape a {
    color: inherit;
    text-decoration: none;
  }
  
  .rodape a:hover {
    opacity: 0.8;
  }

  /* Responsividade */
  @media (max-width: 768px) {
    .rodape img {
      max-width: 70px;
    }
    .ze, .alexandre, .lula {
      max-width: 90px;
    }
  }
</style>

