<style>
    .rodape {
      background-color: #444040;
      color: white;
      padding: 2rem 1rem;
      font-family: sans-serif;
    }
  
    .rodape-container {
      max-width: 830px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 2rem;
    }
  
    .rodape-coluna h3 {
      color: #fff;
      margin-bottom: 1rem;
      font-size: 1.1rem;
    }
  
    .rodape-coluna ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }
  
    .rodape-coluna li {
      margin-bottom: 0.5rem;
    }
  
    .rodape-coluna a {
      color: #ccc;
      text-decoration: none;
      transition: color 0.3s ease;
    }
  
    .rodape-coluna a:hover {
      color: #fff;
    }
  
    .rodape-base {
      color: #aaa;
      text-align: center;
      padding: 0;
      font-size: 0.9rem;
    }
  
    @media (max-width: 768px) {
      .rodape-container {
        grid-template-columns: 1fr;
        gap: 1.5rem;
      }
      
      .rodape-coluna {
        border-bottom: 1px solid #555;
        padding-bottom: 1.5rem;
      }
      
      .rodape-coluna:last-child {
        border-bottom: none;
      }
    }
    .ze {
        max-width: 180px;
    }
  </style>
  
